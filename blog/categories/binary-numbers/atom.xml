&lt;p&gt;<span style="color:#00D">0</span> <span style="color:#00D">0</span> <span style="color:#00D">0</span> <span style="color:#00D">1</span>  <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span>  ((<span style="color:#00D">1</span> <span style="color:#F00;background-color:#FAA">«</span><span style="color:#F00;background-color:#FAA"> </span><span style="color:#00D">5</span>) - <span style="color:#00D">1</span>) i.e. (<span style="color:#00D">1</span> <span style="color:#F00;background-color:#FAA">«</span><span style="color:#F00;background-color:#FAA"> </span>j) - <span style="color:#00D">1</span>&lt;/p&gt;

&lt;p&gt;MAX  <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span>  <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span> <span style="color:#00D">1</span>
